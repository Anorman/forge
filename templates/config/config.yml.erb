# The name of the theme
<% if config[:name] -%>
name: <%= config[:name] %>
<% else -%>
# name: Your Theme Name
<% end -%>

# The website for the theme
<% if config[:uri] -%>
uri: <%= config[:uri] %>
<% else -%>
# uri: http://example.com/theme-name/
<% end -%>

# The author's name
<% if config[:author] -%>
author: <%= config[:author] %>
<% else -%>
# author: The Author's Name
<% end -%>

# The author's website
<% if config[:author_uri] -%>
author_uri: <%= config[:author_uri] %>
<% else -%>
# author_uri: http://authorswebsite.com/
<% end -%>

# The directory for testing your theme
<% if config[:theme_dir] -%>
theme_dir: <%= config[:theme_dir] %>
<% else -%>
# theme_dir: /Users/you/wordpress-install/wp-content/themes/theme_name
<% end -%>